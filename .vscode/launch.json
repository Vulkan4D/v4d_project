{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/demo.linux",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/debug",
            "environment": [
                {"name": "VULKAN_SDK", "value": "${workspaceFolder}/src/vulkan_x86_64"},
                {"name": "VK_LAYER_PATH", "value": "${workspaceFolder}/src/vulkan_x86_64/etc/explicit_layer.d"},
                {"name": "VK_LAYER_SETTINGS_PATH", "value": "${workspaceFolder}/src/vulkan_x86_64/vk_layer_settings.txt"}
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build debug linux"
        }
    ]
}
