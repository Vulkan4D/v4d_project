{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug linux",
            "type": "shell",
            "command": "clear; tools/build.sh LINUX DEBUG",
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "build debug all",
            "type": "shell",
            "command": "clear; tools/build.sh ALL DEBUG && scp -rq build/debug/demo.exe WINDOWS_PC:/v4d_build/debug/",
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "build release all",
            "type": "shell",
            "command": "clear; tools/build.sh ALL RELEASE",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "build v4d debug linux",
            "type": "shell",
            "command": "clear; tools/build_v4d.sh LINUX DEBUG && tools/build.sh LINUX DEBUG",
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "build v4d debug all",
            "type": "shell",
            "command": "clear; tools/build_v4d.sh ALL DEBUG && tools/build.sh ALL DEBUG && scp -rq build/debug/* WINDOWS_PC:/v4d_build/debug/",
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "build v4d release all",
            "type": "shell",
            "command": "clear; tools/build_v4d.sh ALL RELEASE && tools/build.sh ALL RELEASE",
            "problemMatcher": "$gcc",
            "group": "build",
        },
        {
            "label": "build systems debug",
            "type": "shell",
            "command": "clear; find src/v4d/systems/ -type f -name 'build.sh' -exec sh '{}' DEBUG \\;; scp -rq build/debug/systems/* WINDOWS_PC:/v4d_build/debug/systems/",
            "problemMatcher": "$gcc",
            "group": "build",
        },
        {
            "label": "build systems release",
            "type": "shell",
            "command": "clear; find src/v4d/systems/ -type f -name 'build.sh' -exec sh '{}' RELEASE \\;; scp -rq build/release/systems/* WINDOWS_PC:/v4d_build/release/systems/",
            "problemMatcher": "$gcc",
            "group": "build",
        },
        {
            "label": "clean build all",
            "type": "shell",
            "command": "tools/cleanbuild.sh;",
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "unit tests linux",
            "type": "shell",
            "command": "clear; tools/build_v4d.sh LINUX DEBUG && tools/build.sh LINUX TESTS && cd build/debug && ./tests.linux",
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "unit tests windows",
            "type": "shell",
            "command": "clear; tools/build_v4d.sh WINDOWS DEBUG && tools/build.sh WINDOWS TESTS && scp -rq build/debug/* WINDOWS_PC:/v4d_build/debug/ && ssh WINDOWS_PC \"cd /v4d_build/debug/ && tests.exe\"",
            "problemMatcher": "$gcc",
            "group": "build"
        }
    ]
}
