{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "quick build",
            "type": "shell",
            "command": "clear; cd build && cmake --build . --parallel 8",
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "clean build all platforms",
            "type": "shell",
            "command": "clear; tools/cleanbuild.sh windows",
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "unit tests linux",
            "type": "shell",
            "command": "clear; cd build && rm CMakeCache.txt && cmake .. -DCMAKE_BUILD_TYPE=Debug && cmake --build . --parallel 8 && cd debug && ./tests",
            "problemMatcher": "$gcc",
            "group": "test"
        },
        {
            "label": "unit tests windows",
            "type": "shell",
            "command": "clear; cd build && rm CMakeCache.txt && x86_64-w64-mingw32-cmake -DCMAKE_BUILD_TYPE=Debug .. && cmake --build . --parallel 8 && ssh WINDOWS_PC \"START /wait taskkill /f /im tests.exe\" && scp -rq debug/* WINDOWS_PC:/v4d_build/debug/ && ssh WINDOWS_PC \"cd /v4d_build/debug/ && tests.exe\"",
            "problemMatcher": "$gcc",
            "group": "test"
        },
    ]
}
