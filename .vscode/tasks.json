{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_debug",
            "type": "shell",
            // "command": "clear; tools/build.sh LINUX DEBUG",
            "command": "clear; tools/build_v4d.sh LINUX DEBUG && tools/build.sh LINUX DEBUG",
            "problemMatcher": "$gcc"
        },
        {
            "label": "build_release",
            "type": "shell",
            "command": "clear; tools/build.sh ALL RELEASE",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "build_v4d_debug",
            "type": "shell",
            "command": "clear; tools/build_v4d.sh LINUX DEBUG",
            "problemMatcher": "$gcc"
        },
        {
            "label": "build_v4d_release",
            "type": "shell",
            "command": "clear; tools/build_v4d.sh ALL RELEASE",
            "problemMatcher": "$gcc",
            "group": "build",
        }
    ]
}
